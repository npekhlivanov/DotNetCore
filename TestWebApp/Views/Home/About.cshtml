    @{
        int i = 0;
        foreach (var adapterInfo in Model.NetworkAdapterData)
        {
            <div class="row">
                <div class="col-xs-4 col-sm-3">
                    @string.Format("Network adapter {0}", ++i)
                </div>
                <div class="col-xs-8 col-sm-9">
                    @string.Format("Name: {0}; IP: {1}; MAC: {2}", adapterInfo.Name, adapterInfo.IPv4.ToString(), adapterInfo.MacAddress?.ToUpper())
                </div>
            </div>
        }
    }
