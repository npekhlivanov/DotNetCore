@model TestWebApp.Models.AboutViewModel
@{
    ViewData["Title"] = "About";
}
<h2>@ViewData["Title"]</h2>
<h3>@ViewData["Message"]</h3>

<div class="form-group">
    <div class="row">
        <div class="col-xs-4 col-sm-3">
            @Html.Label("Model")
        </div>
        <div class="col-xs-8 col-sm-9">
            @Model.ModelInfo
        </div>
    </div>    
    
    <div class="row">
        <div class="col-xs-4 col-sm-3">
            @Html.Label("Operating System")
        </div>
        <div class="col-xs-8 col-sm-9">
            @Model.RaspberryPiInfo.OperatingSystem.ToString()
        </div>
    </div>

    <div class="row">
        <div class="col-xs-4 col-sm-3">
            @Html.Label("Host Name")
        </div>
        <div class="col-xs-8 col-sm-9">
            @Model.HostName
        </div>
    </div>

    <div class="row">
        <div class="col-xs-4 col-sm-3">
            @Html.Label("Installed RAM")
        </div>
        <div class="col-xs-8 col-sm-9">
            @((Model.RaspberryPiInfo.InstalledRam / (1000 * 1024)).ToString() + " MB")
        </div>
    </div>

    <div class="row">
        <div class="col-xs-4 col-sm-3">
            @Html.Label("Uptime")
        </div>
        <div class="col-xs-8 col-sm-9">
            @Model.RaspberryPiInfo.UptimeTimeSpan.ToString(@"d\d\ h\:mm\:ss")
        </div>
    </div>

    <div class="row">
        <div class="col-xs-4 col-sm-3">
            @Html.Label("Hardware")
        </div>
        <div class="col-xs-8 col-sm-9">
            @Model.RaspberryPiInfo.Hardware
        </div>
    </div>

    <div class="row">
        <div class="col-xs-4 col-sm-3">
            @Html.Label("CPU Model Name")
        </div>
        <div class="col-xs-8 col-sm-9">
            @Model.RaspberryPiInfo.ModelName
        </div>
    </div>

    <div class="row">
        <div class="col-xs-4 col-sm-3">
            @Html.Label("Processor Count")
        </div>
        <div class="col-xs-8 col-sm-9">
            @Model.RaspberryPiInfo.ProcessorCount.ToString()
        </div>
    </div>

    <div class="row">
        <div class="col-xs-4 col-sm-3">
            @Html.Label("CPU Temperature")
        </div>
        <div class="col-xs-8 col-sm-9">
            @(Model.CpuTemperature.ToString() + " °C")
        </div>
    </div>    
    
    <div class="row">
        <div class="col-xs-4 col-sm-3">
            @Html.Label("Supported CPU Features")
        </div>
        <div class="col-xs-8 col-sm-9">
            @string.Join(' ', Model.RaspberryPiInfo.Features?? new string[0])
        </div>
    </div>

